<Window x:Class="ShoeStore.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeStore"
        mc:Ignorable="d"
        Title="Авторизация" MinHeight="450" Width="800"
        Icon="/Resources/Images/Icon.ico"
        FontFamily="Times New Roman">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 10"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#00FA9A"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Orientation="Vertical"
                    Width="400"
                    VerticalAlignment="Center">
            
            <TextBlock Text="АВТОРИЗАЦИЯ"
                       FontSize="30"
                       FontWeight="Bold"
                       Margin="0 10 0 20" 
                       HorizontalAlignment="Center"
                       />

            <Label Content="Логин"/>
            <TextBox FontSize="35"
                     Margin="20 0"/>

            <Label Content="Пароль"/>
            <PasswordBox FontSize="35"
                         Margin="20 0"/>

            <Button Content="Войти"/>
            
            <Button Content="Войти как гось"/>

        </StackPanel>
    </Grid>
</Window>
